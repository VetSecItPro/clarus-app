# Clarus — Environment Variables
# Copy this file to .env.local and fill in the values.

# ─── Supabase ───────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ─── App URLs ───────────────────────────────────────────
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000/auth/callback

# ─── AI / LLM ──────────────────────────────────────────
OPENROUTER_API_KEY=your-openrouter-key

# ─── Content Scraping ──────────────────────────────────
FIRECRAWL_API_KEY=your-firecrawl-key
SUPADATA_API_KEY=your-supadata-key
TAVILY_API_KEY=your-tavily-key
OCR_SPACE_API_KEY=your-ocr-space-key

# ─── Podcast Transcription ─────────────────────────────
ASSEMBLYAI_API_KEY=your-assemblyai-key
ASSEMBLYAI_WEBHOOK_TOKEN=your-assemblyai-webhook-token

# ─── Payments (Polar) ──────────────────────────────────
POLAR_ACCESS_TOKEN=your-polar-access-token
POLAR_ORGANIZATION_ID=your-polar-org-id
POLAR_WEBHOOK_SECRET=your-polar-webhook-secret
POLAR_PRODUCT_STARTER_MONTHLY=your-product-id
POLAR_PRODUCT_STARTER_ANNUAL=your-product-id
POLAR_PRODUCT_PRO_MONTHLY=your-product-id
POLAR_PRODUCT_PRO_ANNUAL=your-product-id
POLAR_PRODUCT_DAY_PASS=your-product-id

# ─── Email ──────────────────────────────────────────────
RESEND_API_KEY=your-resend-key

# ─── Security / Internal ───────────────────────────────
CRON_SECRET=your-cron-secret
INTERNAL_API_SECRET=your-internal-api-secret
# 32-byte hex key for encrypting private feed credentials (Pro tier)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FEED_ENCRYPTION_KEY=your-64-char-hex-string

# ─── Rate Limiting (Upstash Redis) ────────────────────
# Optional: when set, rate limits are shared across all serverless instances.
# Without these, rate limiting falls back to in-memory (per-instance).
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# ─── Error Monitoring ──────────────────────────────────
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
